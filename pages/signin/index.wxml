<!--index.wxml-->
<view class="container">
  <view>
  <picker
    mode="region"
    bindchange="bindRegionChange"
    value="{{region}}"
    custom-item="{{customItem}}" 
  >
    <view class="picker picker_position">
      {{area}}:{{region[1]}} {{region[2]}}
    </view>
  </picker>
</view>
  <input class="id_input" placeholder='{{ph}}'  wx:if="{{identity=='vol'}}"></input>
  <input class="phone_input" placeholder='{{phone}}'></input>
  <input class="name_input" placeholder='{{name}}'></input>
  <picker 
    bindchange="bindPickerChange"
    value="{{index}}" 
    range="{{array}}"
  >
   <view class="picker">
      {{gender}}ï¼š{{array[index]}}
    </view>
  </picker>
  <view class="btn_container">
    <button class=".user_login login_btn" bindtap='confirm'>{{confirm}}</button>
    <button class=".user_signin login_btn" bindtap=''>{{cancel}}</button>
  </view>
</view>
